block other
  .small-other
    if(issue.typeName == 'Sub-task' || issue.typeName == 'Blocker')
      .task
        p.specifics #{issue.key} (#{issue.typeName} of #{issue.parentKey})
        .name #{issue.summary}
        .assigned #{issue.assigneeName}
    else
      .epic
        p.specifics #{issue.key} (#{issue.typeName})
        .name #{issue.summary}
        .assigned #{issue.assigneeName}