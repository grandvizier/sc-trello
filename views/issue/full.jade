block card
  .print-story(
    class=story.fields.labels.indexOf("QA") > -1 ? "qa-label" : "",
    style="border:14px solid ##{colorHash(story.key.substring(story.key.indexOf('-')+1))};"
    )
    .story-id #{story.key}
    .story-name #{strTrunc.apply(story.fields.summary, [71, true])}
    if(story.fields.assignee)
      pre.member-name
        .story-assigned #{story.fields.assignee.displayName}
        img.member-avatar(
          src="#{story.fields.assignee.avatarUrls['24x24']}"
          height="24"
          width="24"
          alt="#{story.fields.assignee.name}")
    else
      pre.member-name
        .story-unassigned --- Unassigned ---
    .story-points #{story.fields.customfield_10004}