extend print
block content
  -var index = 1
  -var tableCount = 0
  - each item in subtasks
    -var typeId = item.fields.parent.fields.issuetype.id
    if(item.fields.status.name != "Done" && item.fields.status.name != "Resolved" && item.fields.status.name != "Closed")
      if index == 1
        tr(data-in="#{index}")
      if index == 4
        -index = 0
      -index++
      -tableCount++
      if tableCount > 12
        -tableCount = 1
        tr
          td.buffer(colspan=4)
      if typeId == 1
        td(style="border:2px solid red")
          .checklist
              #{item.fields.summary)
          .parent-id #{parentKey}
      else
        td(id='#{item.key}'
          style=
          "border:12px solid ##{colorHash(parentKey.substring(parentKey.indexOf('-')+1))};" +
          "outline: 12px solid ##{hashColor(parentKey.substring(parentKey.indexOf('-')+1))};"
          )
          button.remove(
            onclick='$("##{item.key}").remove();') Remove
          .story-id #{item.key}
          .checklist
            #{item.fields.summary)